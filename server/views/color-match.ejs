<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Color Match</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Global CSS for application -->
    <link href="/stylesheets/brain-games.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

<!-- NAVBAR
================================================== -->
  <body>
    <div class="navbar-wrapper">
      <div class="container">

        <div class="navbar navbar-inverse navbar-static-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Brain Games</a>
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><a href="/secure/home">HOME</a></li>
                <li><a href="#stats">STATS</a></li>
                <li class="active"><a href="#">GAMES</a></li>
                <li><a href="#profile">PROFILE</a></li>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Wrap the rest of the page in another container to center all the content. -->
    <div class="container">
      <div class="game">

        <!-- Stats - score and time left -->
        <div class="stats">
          <div>
            <span>Time: </span><span id="game-timeleft">0.50</span> | 
            <span>Score: </span><span id="game-score">0</span>
          </div>
        </div><!--/stats -->

        <!-- The 2 DIVs that will hold the tiles for the game -->
        <div class="wide margin-top">
          <div class="color-match-div">
            <div id="left">&nbsp</div>
          </div>
          <div class="color-match-div">
            <div id="right">&nbsp</div>
          </div>
        </div>

        <div class="clear margin-top">
          <div class="glyphicon-holder">
            <span class="glyphicon glyphicon-circle-arrow-left"></span>
            <span class="glyphicon-text">false</span>
          </div>
          <div class="glyphicon-holder">
            <span class="glyphicon glyphicon-circle-arrow-right"></span>
            <span class="glyphicon-text">true</span>
          </div>
        </div>

        <div class="hint-indicator margin-top">
          <p style="color: gray; font-style: italic">Left arrow key (or swipe left) to indicate that the condition IS NOT fulfilled.</p>
          <p style="color: gray; font-style: italic">Right arrow key (or swipe right) to indicate that the condition IS fulfilled.</p>
        </div>
        
        <input id="start" type="button" class="btn btn-success margin-top" value="Start"/>
      </div><!--/game -->
    </div><!--/container -->


    <!-- Modal that explains the game -->
    <div id="hints" class="modal fade out center">
      <blockquote class="hint hint-top">
        <p>The text in the first tile ...</p>
      </blockquote>

      <div class="wide">
        <div class="color-match-div">
          <div id="hint-left"></div>
        </div>
        <div class="color-match-div">
          <div id="hint-right"></div>
        </div>
      </div>

      <blockquote class="hint hint-bottom">
        <p>... must match the color of the text in the second one</p>
      </blockquote>

      <div class="wide">
        <blockquote class="hint">
          <p id="hint-condition"></p>
        </blockquote>
      </div>

    <p id="next-hint" class="hint-text"><span class="glyphicon glyphicon-circle-arrow-right"></span> Next hint</p>
    <p id="prev-hint" class="hint-text"><span class="glyphicon glyphicon-circle-arrow-left"></span> Previous hint</p>
    <p id="close-hints" class="hint-text"><span class="glyphicon glyphicon-remove-circle"></span> Got it</p>

    </div><!--modal -->


    <!-- FOOTER -->
    <% include footer %>

    <!-- SCRIPTS -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery-mobile.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/brain-games.js"></script>
    <script src="/js/docs.min.js"></script>
    <script src="/js/games/color-match.js"></script>

    <script type="text/javascript">
		  colorMatch.initialize($('#left'), $('#right'));
    </script> 
  </body>
</html>


